<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.portscanner.MainActivity" >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
   <LinearLayout
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">
    <EditText 
        android:id="@+id/ip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:background="#ead7c7"
        android:textSize="25sp"
        android:hint="@string/ip"
        />
     <CheckBox
      android:id="@+id/echo"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/echo"
      android:background="#75ff55"
      android:checked="false"
      android:layout_marginTop="15sp"
      android:layout_below="@+id/ip"
      android:layout_centerHorizontal="true" />
      
      <CheckBox
      android:id="@+id/ftp_data"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/ftp_data"
      android:background="#75ff55"
      android:checked="false"
      android:layout_marginTop="5sp"
      android:layout_below="@+id/echo"
       />
      <CheckBox
      android:id="@+id/ftp_control"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/ftp_control"
      android:background="#75ff55"
      android:checked="false"
      android:layout_marginTop="5sp"
      android:layout_below="@+id/ftp_data"
       />
      <CheckBox
      android:id="@+id/ssh"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/ssh"
      android:background="#75ff55"
      android:checked="false"
      android:layout_marginTop="5sp"
      android:layout_below="@+id/ftp_control"
       />
      <CheckBox
      android:id="@+id/telnet"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/telnet"
      android:background="#75ff55"
      android:checked="false"
      android:layout_marginTop="5sp"
      android:layout_below="@+id/ssh"
       />
      <CheckBox
      android:id="@+id/smtp"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/smtp"
      android:background="#75ff55"
      android:checked="false"
      android:layout_marginTop="5sp"
      android:layout_below="@+id/telnet"
       />
      <CheckBox
      android:id="@+id/dns"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/dns"
      android:background="#75ff55"
      android:checked="false"
      android:layout_marginTop="5sp"
      android:layout_below="@+id/smtp"
       />
      <CheckBox
      android:id="@+id/finger"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/finger"
      android:background="#75ff55"
      android:checked="false"
      android:layout_marginTop="5sp"
      android:layout_below="@+id/dns"
       />
      <CheckBox
      android:id="@+id/http"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/http"
      android:background="#75ff55"
      android:checked="false"
      android:layout_marginTop="5sp"
      android:layout_below="@+id/tftp"
       />
      <CheckBox
      android:id="@+id/rip"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/rip"
      android:background="#75ff55"
      android:checked="false"
      android:layout_marginTop="5sp"
      android:layout_below="@+id/http"
       />
      <CheckBox
      android:id="@+id/sql_server"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/sql_server"
      android:background="#75ff55"
      android:checked="false"
      android:layout_marginTop="5sp"
      android:layout_below="@+id/rip"
       />

      <CheckBox
      android:id="@+id/ldap"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/ldap"
      android:checked="false"
      android:background="#75ff55"
      android:layout_marginTop="5sp"
      android:layout_below="@+id/sql_server"
       />
      <CheckBox
      android:id="@+id/https"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/https"
      android:checked="false"
      android:layout_marginTop="5sp"
      android:background="#75ff55"
      android:layout_below="@+id/ldap"
       />
      <CheckBox
      android:id="@+id/dhcp"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/dhcp"
      android:checked="false"
      android:background="#75ff55"
      android:layout_marginTop="5sp"
      android:layout_below="@+id/https"
       />
    <TextView 
        android:id="@+id/loading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="0sp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="#259359"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dhcp"
        android:background="#003366"
        android:textColor="#b1ff55"
        android:text="@string/button"
        />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
